<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Playground</title>

    <meta name="viewport" content="width=device-width,initial-scale=1,width=device-width,user-scalable=no">
    <meta name="HandheldFriendly" content="true" />
    <meta name="MobileOptimized" content="320" />

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/playground.css">

  </head>

  <body>
    <div class="playground">
      <div class="boxes">
        <div class="box-edit">
          <div class="box box-html">
            <div class="bar">
              HTML
            </div>
            <div class="code-block">
              <textarea id="editor" class="html-container" name="name" rows="8" cols="80"></textarea>
            </div>
          </div>
          <div class="box box-css">
            <div class="bar">
              CSS ///
            </div>
            <div class="code-block">
              <%- include('css/css.ejs') %>
            </div>
          </div>
          <div class="box box-js">
            <div class="bar">
              JS
            </div>
            <div class="code-block">
              <textarea class="js-container" name="name" rows="8" cols="80"></textarea>
            </div>
          </div>
        </div>
<!--         <button class="run-button" style="cursor:pointer;"> Run </button> -->
        <div class="box-output">
          <div class="results">
<!--             <textarea id="the-frame" src="" class="iframe-result"></textarea> -->

<!--             <button onclick="submit_html();">Submit</button>

            <iframe id="result" style="height:800px;"></iframe> -->

          </div>
        </div>
      </div>
    </div>
  </body>

<script>


  $(document).ready(function() {
    $('.html-container').load('/html');
    $('.css-container').load('/css');
    $('.js-container').load('/js');
    $('.results').load('/template');
  });

</script>
</html>
